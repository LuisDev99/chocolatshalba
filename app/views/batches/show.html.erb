<div class="container">
  <div class="row">
    <div class="col m12">
      <div class="card">
        <div class="card-content">
          <div class="page-header">
            <h1>Revision de Documentaci贸n</h1>
          </div>
          <p>Codigo: <%= @batch.enterCode %></p>
          <p>Control de ingreso: <%= @batch.entry_control.entry_number %></p>
          <p>Organizaci贸n: <%= @batch.entry_control.organization.name %></p>
          <p>Fecha de ingreso: <%= @batch.entry_control.entryDate %></p>

          <div class="card-content">
            <b>DOCUMENTOS</b>
            <table class="striped bordered">
              <thead>
                <tr>
                  <th>Nombre del archivo</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @batch.entry_control.documents.each do |doc| %>
                  <tr>
                    <td><%=doc.title%></td>
                    <td><%= link_to "Descargar archivo", doc.ec_data.url(:original, false) %><td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <%= link_to "Regresar", checkings_path , class: "btn btn-primary"%>
          <a class = "waves-effect waves-light btn" data-target = "modal1">Determinar</a>
        </div>
      </div>
    </div>
  </div>
</div>

<div id = "modal1" class = "modal" >
  <%= form_for ([@batch, @batch.certificate_checks.build]) do |f| %>
      <div class="modal-content">
        <center>
          <h5>Decisi贸n:</h5>
          <div class = "field">
            <p style = "width: 40%"><%= f.select :decision, options_for_select([["Aceptar", 1], ["Rechazar", 0]]), class:"dropdown-button btn" %></p>
          </div>
          <div class = "input-field">
            <%= f.label :description, "Observaci贸n" %>
            <%= f.text_area :description, class:"materialize-textarea", :required => true%>
          </div>
          <%= f.submit 'Aceptar',class:"modal-action modal-close waves-effect waves-light btn" %>
          <a class = "modal-action modal-close waves-effect waves-light red darken-1 btn">Cancelar</a>
        </center>
      </div>
  <% end %>
</div>

<script>
    $(document).ready(function () {
        $('.modal').modal();
    });
    $('#modal1').modal('open');
    $('#modal1').modal('close');
</script>

<script>
    $(document).on('turbolinks:load', function () {
        $('select').material_select();
    })
</script>
