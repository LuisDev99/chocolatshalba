<div class="container">
  <div class="row">
    <div class="col m12">
      <div class="card">
        <div class="card-content">
          <div class="page-header">
            <h1>Lotes de Exportación</h1>
          </div>
          <table class="striped">
            <thead>
              <tr>
                <th>Código</th>
                <th>Fecha de creación</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @export_batches.each do |batch| %>
                <tr>
                  <td>
                    <%= batch.id %>
                  </td>
                  <td>
                    <%= batch.created_at.strftime("%Y-%m-%d")  %>
                  </td>
                  <td>
                    <%=	link_to "Ver", batch %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>