<div class = "container">
  <div class = "row">
    <div class = "col m12">
      <div class = "card">
        <div class = "card-content">
          <div class = "page-header">
            <h1>Etapas del proceso</h1>
          </div>
          <input type="text" id="oNameCode" onkeyup="filterTable()" placeholder="Busque lote...">
          <table id="oTable" class="striped">
            <thead>
            <tr>
              <th>Código de lote</th>
              <th>Tipo de cacao</th>
              <th>Material genético</th>
              <th>Etapa</th>
            </tr>
            </thead>
            <tbody>
              <% @batches.each do |batch| %>
                <tr>
                  <td><%= batch.enterCode %></td>
                  <td><%= CocoaType.find(batch.cocoaType).name %></td>
                  <td><%= GeneticMaterial.find(batch.geneticMaterial).name %></td>
                  <%	 if batch.quality_control == nil || batch.sensory_analysis == nil %>
                    <td>Analisis de Calidad</td>
                  <%	 elsif batch.quality_control.revision == nil and batch.ft == false%>
                    <td>Jefe de Calidad</td>
                  <%	 elsif batch.certificate_checks.first == nil and batch.quality_control.revision == nil and batch.ft %>
                    <td>Jefe de Calidad y Certificado</td>
                  <%	 elsif batch.certificate_checks.first != nil and batch.quality_control.revision == nil and batch.ft %>
                      <td>Jefe de Calidad</td>
                  <%	 elsif batch.certificate_checks.first == nil and batch.quality_control.revision != nil and batch.ft %>
                      <td>Certificado</td>
                  <%	 elsif batch.purchase == nil and batch.buy == 1%>
                      <td>Compras</td>
                  <%	 elsif batch.moved == false%>
                      <td>Bodega</td>
                  <%	 elsif batch.export_batch == nil%>
                      <td>Exportación</td>
                  <%	 else %>
                      <td>Bodega y Ventas</td>
                  <%	 end %>
                </tr>
              <%	end  %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
function filterTable() {
  var input,
    filter,
    table,
    tr,
    td,
    i,
    j,
    f;
  input = document.getElementById("oNameCode");
  filter = input.value.toUpperCase();
  table = document.getElementById("oTable");
  tr = table.getElementsByTagName("tr");
  f = true;
  for (j = 0; j < 4; j++) {
    if (f) {
      for (i = 0; i < tr.length; i++) {
        td = tr[i].getElementsByTagName("td")[j];
        if (td) {
          if (td.innerHTML.toUpperCase().indexOf(filter) > -1) {
            tr[i].style.display = "";
            f = false;
          } else {
            tr[i].style.display = "none";
          }
        }
      }
    }
  }
}
</script>