<div class = "container">
  <div class = "row">
    <div class = "col m12">
      <div class = "card">
        <div class = "card-content">
          <div class = "page-header">
            <h1>Etapas del proceso</h1>
          </div>
          <table class = "striped">
            <thead>
            <tr>
              <th>Codigo de identificación</th>
              <th>Tipo de cacao</th>
              <th>Material genético</th>
              <th>Etapa</th>
            </tr>
            </thead>
            <tbody>
              <% @batches.each do |batch| %>
                  <tr>
                    <td><%= batch.enterCode %></td>
                    <td><%= CocoaType.find(batch.cocoaType).name %></td>
                    <td><%= GeneticMaterial.find(batch.geneticMaterial).name %></td>
                    <% if batch.quality_control == nil || batch.sensory_analysis == nil%>
                      <td>Analisis de Calidad</td>
                    <% elsif batch.quality_control.revision == nil %>
                        <td>Jefe de Calidad</td>
                    <% elsif batch.certificate_checks == nil %>
                        <td>Certificado</td>
                    <% elsif batch.buy == 1 %>
                        <td>Mover Lotes</td>
                    <% elsif batch.moved == 1 %>
                        <td>Exportación</td>
                    <% end %>
                  </tr>
              <%	end  %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>