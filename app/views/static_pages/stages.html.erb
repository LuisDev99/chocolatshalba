<div class = "container">
  <div class = "row">
    <div class = "col m12">
      <div class = "card">
        <div class = "card-content">
          <div class = "page-header">
            <h1>Etapas del proceso</h1>
          </div>
          <table class = "striped">
            <thead>
            <tr>
              <th>Código de lote</th>
              <th>Organización</th>
              <th>Etapa</th>
            </tr>
            </thead>
            <tbody>
              <% @batches.each do |batch| %>
                <tr>
                  <td><%= batch.enterCode %></td>
                  <td><%= batch.entry_control.organization.name %></td>
                  <% if batch.quality_control == nil || batch.sensory_analysis == nil%>
                    <td>Analisis de Calidad</td>
                  <% elsif batch.quality_control.revision == nil %>
                      <td>Jefe de Calidad</td>
                  <% elsif batch.review == 1 && batch.ft%>
                      <td>Certificado</td>
                  <% elsif batch.purchase == nil %>
                      <td>Compras</td>
                  <% elsif batch.moved == false %>
                      <td>Mover Lotes</td>
                  <% elsif batch.moved %>
                      <td>Exportación</td>
                  <% end %>
                </tr>
              <%	end  %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>