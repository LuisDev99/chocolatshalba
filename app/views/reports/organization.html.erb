<div class = "container">
  <div class = "row">
    <div class = "col m12">
      <div class = "card">
        <div class = "card-content">
          <div class = "page-header">
            <h1>Reportes por Organización</h1>
          </div>
          <%= form_tag({:controller => "reports", :action => "organization"}, :method => :get) do %>
              <%= text_field_tag "searchbox", params[:searchbox] %>

              <%= submit_tag "Buscar", :name => nil, class:"btn btn-default btn-lg" %>
          <% end %>
          <table class = "striped">
            <thead>
            <tr>
              <th>Cantidad de sacos</th>
              <th>Peso</th>
              <th>Codigo de identificación</th>
              <th>Tipo de cacao</th>
              <th>Material genético</th>
              <th></th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @entries.each  do |entry| %>
              <% entry.batches.each do |batch| %>
                  <tr>
                    <td><%= batch.sackAmount %></td>
                    <td><%= number_with_precision(batch.weight, precision: 2) %> lb</td>
                    <td><%= batch.enterCode %></td>
                    <td><%= CocoaType.find(batch.cocoaType).name %></td>
                    <td><%= GeneticMaterial.find(batch.geneticMaterial).name %></td>
                    <td><%= batch.entry_control.organization.name %></td>
                  </tr>
              <% end %>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
