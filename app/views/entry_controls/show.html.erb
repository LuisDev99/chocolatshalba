<h1>Ingresos de Lotes</h1>

<p>
	<%= Organization.find(@entry.organization_id).name %>
</p>

<p>
  <%= @entry.receivedBy %>
</p>

<p>
   <%= @entry.deliveredBy%>
</p>

<h2>Lotes</h2>
<div class="row">
        <div class="col m12">
            <div class="card">
                <div class="card-content">
                    <table>
                        <thead>
                        <tr>
                            <th>Cant. sacos</th>
                            <th>Peso libras</th>
                            <th>Codigo de identificación</th>
                            <th>Tipo de cacao</th>
                            <th>Material genético</th>
                        </tr>
                        </thead>
                        <tbody>
                            <% if !@batches.nil? %>
                            <% @batches.each do |batch| %>
                                <tr>
                                    <td><%= batch.sackAmount %></td>
                                    <td><%= batch.weight %></td>
                                    <td><%= batch.enterCode %></td>
                                    <td><%= batch.cocoaType %></td>
                                    <td><%= batch.geneticMaterial %></td>
                                </tr>
                            <% end %>
                            <% end %>
                        </tbody>
                    </table>
                </div> 
            </div> 
        </div> 
    </div> 
<%= link_to 'Agregar lote', new_entry_control_batch_path(@entry) , class:"waves-effect waves-light btn"%>